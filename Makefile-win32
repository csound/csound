$(CSOUNDLIB): $(CSOUNDLIB_OBJ)
	$(CXX) -O2 -shared -Wl,--output-def,$(subst .dll.5.1,.def,$(CSOUNDLIB)) -Wl,--out-implib,lib$(subst .dll.5.1,.a,$(CSOUNDLIB)) -o $@ $^ $(LDFLAGS) $(LIBS)

Opcodes/%.o: Opcodes/%.c
	$(CC) $(CFLAGS) -c $< -o $@

%.o: %.c
	$(CC) -D__BUILDING_LIBCSOUND $(CFLAGS) -c $< -o $@

%.oo: %.cpp
	$(CXX) $(CFLAGS) -c $< -o $@

